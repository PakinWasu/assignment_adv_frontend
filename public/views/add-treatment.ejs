<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Treatment</title>
    <link rel="stylesheet" href="../css/styles.css" />
</head>

<body class="add-treatment">
    <header>
        <div class="container">
            <h1>Add Treatment</h1>
        </div>
    </header>
    <main>
        <div class="form-container">
            <form action="/add-treatment" method="POST">
                <div class="form-group">
                    <label for="doctorID">แพทย์:</label>
                    <select name="doctorID" id="doctorID" required>
                        <option value="">-- Select Doctor --</option>
                        <% doctors.forEach(doctor => { %>
                            <option value="<%= doctor.id %>"><%= doctor.name %></option>
                        <% }); %>
                    </select>
                </div>

                <div class="form-group">
                    <label for="patientID">ผู้ป่วย:</label>
                    <select name="patientID" id="patientID" required>
                        <option value="">-- Select Patient --</option>
                        <% patients.forEach(patient => { %>
                            <option value="<%= patient.id %>"><%= patient.name %></option>
                        <% }); %>
                    </select>
                </div>

                <div class="form-group">
                    <label for="status">สถานะ:</label>
                    <input type="text" name="status" id="status" required>
                </div>

                <div class="form-group">
                    <label for="start_treatment_date">วันที่เริ่มการรักษา:</label>
                    <input type="datetime-local" name="start_treatment_date" id="start_treatment_date" required>
                </div>

                <div class="form-group">
                    <label for="last_treated_date">วันที่รักษาครั้งสุดท้าย:</label>
                    <input type="datetime-local" name="last_treated_date" id="last_treated_date" required>
                </div>

                <div class="form-group">
                    <label for="short_detail">อาการ:</label>
                    <textarea name="short_detail" id="short_detail" rows="4" required></textarea>
                </div>

                <button type="submit" class="submit-button">Add Treatment</button>
            </form>
        </div>
    </main>
</body>
</html>
