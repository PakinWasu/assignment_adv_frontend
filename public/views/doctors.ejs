<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Doctors List</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/styles.css" />

</head>
<body>
    <div class="container">
        <h1 class="mt-5">Doctors List</h1>
        <table class="table mt-3">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Department</th>
                    <th>Contact</th>
                    <th>Date of Birth</th>
                    <th>Medical Practice License Number</th>
                    <th>Details</th>
                </tr>
            </thead>
            <tbody>
                <% if (doctors.length > 0) { %>
                    <% doctors.forEach(doctor => { %>
                        <tr>
                            <td><%= doctor.id %></td>
                            <td><%= doctor.name %></td>
                            <td><%= doctor.department %></td>
                            <td><%= doctor.contact %></td>
                            <td><%= doctor.date_of_birth %></td>
                            <td><%= doctor.medical_practice_license_number %></td>
                            <td><%= doctor.doctor_detail %></td>
                            <td><a href="/update-doctor/<%= doctor.id %>">Edit</a></td>
                            <td><a href="/delete-doctor/<%= doctor.id %>">Del</a></td>
                            


                        </tr>
                    <% }); %>
                <% } else { %>
                    <tr>
                        <td colspan="7" class="text-center">No doctors found</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
        <a href="/add-doctor" class="btn btn-primary">Add Doctor</a>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
